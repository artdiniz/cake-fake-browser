{
    "name": "@acaelum/cake",
    "productName": "Cake",
    "packageName": "Cake",
    "description": "Fake browser wrapper that will power JS-12 course at Caelum",
    "keywords": [
        "caelum",
        "curso",
        "js12"
    ],
    "author": {
        "name": "Artur Diniz Adam",
        "url": "https://github.com/artdiniz",
        "email": "artur.adam@caelum.com.br"
    },
    "version": "0.0.23-dev-a",
    "publishConfig": {
        "access": "public"
    },
    "main": "./src/index.js",
    "bin": {
        "cake": "./bin/index.js"
    },
    "scripts": {
        "start": "electron ./src/index",
        "start-class": "run-electron ./src/index",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "cheerio": "^1.0.0-rc.3",
        "chokidar": "^3.0.2",
        "common-tags": "^1.8.0",
        "electron-context-menu": "^0.11.0",
        "es6-template-strings": "^2.0.1",
        "esm": "^3.2.25",
        "execa": "^1.0.0",
        "expand-tilde": "^2.0.2",
        "express": "^4.17.1",
        "get-port": "^4.1.0",
        "gulp": "^4.0.2",
        "gulp-debug": "^4.0.0",
        "gulp-filter": "^5.1.0",
        "js-beautify": "^1.10.1",
        "lodash": "^4.17.15",
        "memoizee": "^0.4.14",
        "once": "^1.4.0",
        "read-pkg-up": "^4.0.0",
        "run-electron": "^1.0.0",
        "stoppable": "^1.1.0",
        "tmp": "0.0.33"
    },
    "devDependencies": {
        "electron": "^13.6.6",
        "electron-builder": "^20.44.4"
    },
    "build": {
        "productName": "Cake",
        "appId": "br.com.caelum.cake.shell",
        "files": [
            "**/*",
            "resources/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "artifactName": "${productName}-${os}-${version}.${ext}"
        },
        "linux": {
            "executableName": "cake",
            "artifactName": "${productName}-${os}-${version}.${ext}",
            "target": [
                "AppImage",
                "deb",
                "tar.gz"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "artifactName": "${productName}-${os}-${version}.${ext}"
        },
        "nsis": {
            "oneClick": "false"
        },
        "directories": {
            "output": "dist",
            "buildResources": "resources"
        }
    }
}
